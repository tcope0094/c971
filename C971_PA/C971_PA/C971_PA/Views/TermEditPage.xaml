<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="C971_PA.Views.TermEditPage">
    
    <StackLayout Orientation="Vertical"
                 VerticalOptions="CenterAndExpand">


        <Grid
            Padding="10,25,10,50"
            RowSpacing="20"            
            ColumnSpacing="10"
            MinimumHeightRequest="100">
            <Label Text="Term Name:"
                       Grid.Column="0"
                       Grid.Row="0"
                       VerticalOptions="CenterAndExpand"
                       FontSize="Medium"/>
            <Entry Text="{Binding Name}"
                       Grid.Column="1"
                       Grid.Row="0"
                       VerticalOptions="Center"
                       FontSize="Medium"/>

            <Label Text="Term Start:"
                       Grid.Column="0"
                       Grid.Row="1"
                       VerticalOptions="Center"
                       FontSize="Medium"/>
            <DatePicker Date="{Binding Start}"
                       Grid.Column="1"
                       Grid.Row="1"
                       VerticalOptions="CenterAndExpand"
                       FontSize="Medium"/>

            <Label Text="Term End: "
                       Grid.Column="0"
                       Grid.Row="2"
                       VerticalOptions="Center"
                       FontSize="Medium"/>
            <DatePicker Date="{Binding End}"
                       Grid.Column="1"
                       Grid.Row="2"
                       VerticalOptions="Center"
                       FontSize="Medium"/>

            <Label Text="Add Course: "
                       Grid.Column="0"
                       Grid.Row="3"
                       VerticalOptions="Center"
                       FontSize="Medium"/>
            <Picker x:Name="addCoursePicker"
                    SelectedIndexChanged="OnCoursePickerSelected"
                       Grid.Column="1"
                       Grid.Row="3"
                       VerticalOptions="Center"
                       FontSize="Medium"/>
        </Grid>

        <Label Text="Courses in Term:"
               Padding="10"
               FontSize="Large"/>
        <Button Text="Add Course"
                Clicked="OnAddCourseButtonClicked"/>
        <CollectionView x:Name="termCoursesCollectionView"                        
                        SelectionMode="Multiple"
                        SelectionChanged="OnItemSelected">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <ScrollView>
                        <StackLayout Padding="10">
                            <Label Text="{Binding Name}"
                                FontSize="Medium"/>
                        </StackLayout>
                    </ScrollView>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </StackLayout>
</ContentPage>